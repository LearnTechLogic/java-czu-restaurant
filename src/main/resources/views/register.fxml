<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.czu.controller.RegisterController">
   <children>
      <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
         </padding>
         <children>
            <Label text="员工登录">
               <font>
                  <Font size="45.0" />
               </font>
            </Label>
            <HBox spacing="20" alignment="CENTER">
               <children>
                  <Label text="账号：" alignment="BASELINE_RIGHT">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <TextField fx:id="accountField" promptText="请输入账号" prefHeight="32.0" prefWidth="220.0" />
               </children>
            </HBox>
            <HBox spacing="20" alignment="CENTER">
               <children>
                  <Label text="密码：" alignment="BASELINE_RIGHT">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="passwordField" promptText="请输入密码" prefHeight="32.0" prefWidth="220.0" />
               </children>
            </HBox>
            <Label fx:id="registerResult" style="-fx-text-fill: red; -fx-font-size: 18px" alignment="CENTER" text=""/>
            <HBox spacing="20" alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#register" prefHeight="26.0" prefWidth="80.0" style="-fx-background-color: green;" text="登录">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#post" prefHeight="26.0" prefWidth="80.0" style="-fx-background-color: red;" text="注册">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>



